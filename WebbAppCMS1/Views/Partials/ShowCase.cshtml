@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage




<section class="__showcase container">
            <img src="@Model.Value("showcaseLeftImageUrl")" class="__img-left" alt="showcase-img-1">
            <div class="__showcase-body">
                <h1>@Model.Value("showcaseHeader")</h1>
                <p>@Model.Value("showcaseText")</p>
                <a class="__btn-theme" href="#">
                    <span class="__btn-theme-left"></span>  
                    <span class="__btn-theme-right"></span>
                   @Model.Value("showcaseButtonText")
                </a>
            </div>
            <img src="@Model.Value("showcaseRightImageUrl")" class="__img-right" alt="showcase-img-2">
        </section>
